@model List<Post>

    <div clas="card mb-3">
        <div class="card-header">
            <h5 class="card-title">Yeni</h5>
        </div>
        <div class="card-body">
            @foreach(var post in Model){
                <div class="mb-3">
                    <a href="/post/details/@post.Url">
                    <h6 class="mb-0">@post.Title</h6>
                    </a>
                </div>
            }
        </div>
    </div>